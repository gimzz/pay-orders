<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" 
            xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.mycompany.pay.orders.controller.LoginController"
            prefWidth="600" prefHeight="400">

    <children>
        <VBox spacing="10" layoutX="150" layoutY="100" prefWidth="300" alignment="CENTER">
            <children>
                <Label text="Iniciar Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <TextField fx:id="txtUsername" promptText="Usuario" prefWidth="250" />
                <PasswordField fx:id="txtPassword" promptText="Contraseña" prefWidth="250" />

                <Label fx:id="lblMessage" style="-fx-text-fill: red;" />

                <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#handleLogin" prefWidth="250" />

                <Button text="Registrar Nuevo Usuario" onAction="#abrirRegistro" prefWidth="250" />
            </children>
        </VBox>
    </children>

</AnchorPane>
